---
import { Trophy } from "@lucide/astro";
import Section from "../Section.astro";

import { awards } from "@cv";
---

<Section title="Logros">
  <div class="header">
    <Trophy size="28" color="#f0ad4e" />
    <p class="subtitle">Reconocimientos obtenidos en competencias y proyectos</p>
  </div>

  <ul class="awards-list">
    {
      awards.map(({ title, year, description }) => (
        <li class="award-item">
          <span class="year">{year}</span>
          <span class="title">{title}</span>
          <p class="desc">{description}</p>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  .header {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 0.9rem;
    color: #555;
  }

  .awards-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 0;
    list-style: none;
  }

  .award-item {
    background: #fafafa;
    border: 1px solid #eee;
    padding: 1rem;
    border-radius: 10px;
    transition: 0.2s ease;
  }

  .award-item:hover {
    background: #fff;
    border-color: #e2e2e2;
    transform: translateY(-2px);
  }

  .year {
    font-weight: 600;
    color: #f0ad4e;
    font-size: 0.85rem;
  }

  .title {
    display: block;
    font-size: 1rem;
    font-weight: 600;
  }

  .desc {
    font-size: 0.85rem;
    color: #555;
    margin-top: 4px;
  }
</style>
